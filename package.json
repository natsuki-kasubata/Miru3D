{
  "name": "miru3d",
  "version": "1.0.0",
  "description": "3D model viewer for Windows - drag & drop GLB, FBX, OBJ, VRM, 3DGS",
  "type": "module",
  "main": "dist/main/index.js",
  "author": "Natsuki",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@mkkellogg/gaussian-splats-3d": "^0.4.7",
    "@pixiv/three-vrm": "^3.4.5",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.171.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/three": "^0.171.0",
    "autoprefixer": "^10.4.20",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.natsuki.miru3d",
    "productName": "Miru3D",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "fileAssociations": [
      {
        "ext": "glb",
        "name": "GLB 3D Model",
        "description": "glTF Binary 3D Model",
        "mimeType": "model/gltf-binary",
        "role": "Viewer"
      },
      {
        "ext": "gltf",
        "name": "GLTF 3D Model",
        "description": "glTF 3D Model",
        "mimeType": "model/gltf+json",
        "role": "Viewer"
      },
      {
        "ext": "fbx",
        "name": "FBX 3D Model",
        "description": "Autodesk FBX 3D Model",
        "role": "Viewer"
      },
      {
        "ext": "obj",
        "name": "OBJ 3D Model",
        "description": "Wavefront OBJ 3D Model",
        "role": "Viewer"
      },
      {
        "ext": "vrm",
        "name": "VRM Avatar",
        "description": "VRM 3D Avatar",
        "role": "Viewer"
      },
      {
        "ext": "ply",
        "name": "PLY Point Cloud",
        "description": "3D Gaussian Splat (PLY)",
        "role": "Viewer"
      },
      {
        "ext": "splat",
        "name": "Splat File",
        "description": "3D Gaussian Splat",
        "role": "Viewer"
      },
      {
        "ext": "ksplat",
        "name": "KSplat File",
        "description": "3D Gaussian Splat (KSplat)",
        "role": "Viewer"
      }
    ]
  }
}
